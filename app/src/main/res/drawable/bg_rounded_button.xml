<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleColor">

    <item>
        <layer-list>

            <!-- Shadow -->
            <item
                android:right="4dp"
                android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#50000000" />
                </shape>
            </item>

            <!-- Gradient -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/buttonBackgroundDark"
                        android:startColor="@color/buttonBackgroundLight" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/buttonBorder" />
                    <corners android:radius="30dp" />
                    <padding
                        android:left="12dp"
                        android:right="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</ripple>
